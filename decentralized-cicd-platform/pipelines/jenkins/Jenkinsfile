pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: '*/main', url: 'https://github.com/rozana10710/decentralized-cicd-platform.git'
            }
        }
        stage('Build with Docker') {
            steps {
                script {
                    cd containers
                    sh 'docker build -t my-app .'
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    sh 'docker run my-app pytest tests/'
                }
            }
        }
    }
}
